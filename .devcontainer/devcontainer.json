{
  "name": "uav-cyber-sim (X11 over SSH)",
  //"image": "uav-cyber-sim",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile",
    "args": {
      "UID": "1001",
      "GID": "1001"
    }
  },
  "runArgs": [
    "--network",
    "host"
  ],
  "containerEnv": {
    "DISPLAY": "${env:DISPLAY}",
    "XAUTHORITY": "/tmp/.Xauthority"
  },
  "mounts": [
    "type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix",
    "type=bind,source=${env:HOME}/.Xauthority,target=/tmp/.Xauthority"
  ],
  "postAttachCommand": "sudo chown -R ubuntu /workspaces",
  // "customizations": {
  //   "vscode": {
  //     "extensions": [
  //       "ms-toolsai.jupyter@2025.6.0",
  //       "ms-python.python"
  //     ]
  //   }
  //},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "remoteUser": "ubuntu"
}